package main

import (
	"bytes"
	"encoding/json"
	"errors"
	"net/http"
)

type Notification struct {
	to      string
	message string
}

func notify(to string, message string) error {
	// marshel notification
	notification := Notification{
		to:      to,
		message: message,
	}
	j, _ := json.Marshal(notification)
	println("notifying..")
	println(string(j[:]))

	// request
	req, err := http.NewRequest("POST", fcmConfig.androidApi, bytes.NewBuffer(j))
	if err != nil {
		println(err.Error)
		return err
	}

	// headers
	req.Header.Add("Content-Type", "application/json")
	req.Header.Add("Authorization", "key: "+fcmConfig.serverKey)

	// send request
	client := &http.Client{}
	resp, err := client.Do(req)
	if err != nil {
		println(err.Error)
		return err
	}
	defer resp.Body.Close()

	println(resp.StatusCode)
	if resp.StatusCode != 200 {
		println("invalid response")
		return errors.New("Invalid response")
	}

	return nil
}
